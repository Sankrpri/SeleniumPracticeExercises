		// TODO Auto-generated method stub


		String baseUrl = "https://www.educative.io/answers/how-to-add-a-color-picker-in-html";
		WebDriver driver ; 

		driver=new ChromeDriver();

		//maximise windows
		driver.manage().window().maximize();

		//open url
		driver.get(baseUrl);

